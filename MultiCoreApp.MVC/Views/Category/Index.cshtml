@model IEnumerable<CategoryDto>

@{
    ViewData["Title"] = "Index";
    
}

<h1>Kategoriler</h1>
<a asp-action="Create"class="btn btn-primary mb-3">Kategori Ekle</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>

                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                <a asp-action="Details" asp-route-id="@item.Id"class="btn btn-info btn-sm">Detay</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
            </td>
        </tr>

    }
    </tbody>
</table>